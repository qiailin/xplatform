<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="newsAction" class="com.jiakun.xplatform.news.action.NewsAction"
		scope="request" parent="baseAction">
		<property name="newsService" ref="newsService" />
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="oaFileFilePath">
			<value>${oa.wFile.filePath}</value>
		</property>
		<property name="oaReadFilePath">
			<value>${oa.rFile.filePath}</value>
		</property>
		<property name="oaTxtFilePath">
			<value>${oa.txt.filePath}</value>
		</property>
	</bean>
	
	<bean id="newsService" class="com.jiakun.xplatform.news.service.impl.NewsServiceImpl">
		<property name="newsDao" ref="newsDao" />
	</bean>

	<bean id="newsDao" class="com.jiakun.xplatform.news.dao.impl.NewsDaoImpl" parent="baseDao">
	</bean>
	
</beans>